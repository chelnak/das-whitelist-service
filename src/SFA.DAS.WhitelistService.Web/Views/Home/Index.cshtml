@{
    ViewData["Title"] = "Home";
    @model IndexViewModel;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            Whitelist an ip address
        </h1>
        
        <p class="govuk-body">[TBD] Enter your details below and click submit.</p>
        <form method="post">
            <div class="govuk-form-group">

                <div class="govuk-form-group">
                    <label class="govuk-label" for="FullName">Resource Name</label>
                    <input class="govuk-input govuk-!-width-one-half" id="ResourceName" type="text" name="ResourceName" required="true">
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label" for="FullName">Resource Group Name</label>
                    <input class="govuk-input govuk-!-width-one-half" id="ResourceGroupName" type="text" name="ResourceGroupName" required="true">
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label" for="FullName">Your Name</label>
                    <input class="govuk-input govuk-!-width-one-half" id="FullName" type="text" name="FullName" required="true">
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label" for="IPAddress">IP Address</label>
                    <input class="govuk-input govuk-!-width-one-half" id="IPAddress" type="text" name="IPAddress" required="true">
                </div>

                <div class="govuk-form-group">
                    <button asp-controller="Submit" asp-action="Home" class="govuk-button govuk-button--start">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>