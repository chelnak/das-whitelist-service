@{
    ViewData["Title"] = "Home";
    @model IndexViewModel;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Whitelist Service
        </h1>

        <p class="govuk-body">[TBD] Enter your details below and click submit.</p>
        <form method="post">
            <div class="govuk-form-group">

                <div class="govuk-form-group">
                    <label class="govuk-label" for="FullName">Full Name</label>
                    <input class="govuk-input" id="FullName" type="text" name="FullName" required="true">
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label" for="IPAddress">IP Address</label>
                    <input class="govuk-input" id="IPAddress" type="text" name="IPAddress" required="true">
                </div>

                <div class="govuk-form-group">
                    <button asp-controller="Submit" asp-action="Home" class="govuk-button govuk-button--start">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>